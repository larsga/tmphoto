#PREFIX xtm @"http://www.topicmaps.org/xtm/1.0/core.xtm#"

/*

  TMPhoto system ontology
  $Id: ontology.ltm,v 1.6 2008/12/04 12:31:31 lars.garshol Exp $

*/

/* ----- Topic types */

[image   = "Image" @"http://psi.ontopia.net/tmphoto/#image"]
  [video    = "Video" @"http://psi.ontopia.net/tmphoto/#video"]
  [photo    = "Photo" @"http://psi.ontopia.net/tmphoto/#photo"]
[location = "Location" @"http://psi.ontopia.net/tmphoto/#location"]
[person   = "Person" @"http://psi.ontopia.net/tmphoto/#person"]
[event    = "Event" @"http://psi.ontopia.net/tmphoto/#event"]
[category = "Category" @"http://psi.ontopia.net/tmphoto/#category"]

xtm:superclass-subclass(image : xtm:superclass, video : xtm:subclass)
xtm:superclass-subclass(image : xtm:superclass, photo : xtm:subclass)

/* ----- Association types */

[taken-at = "Photo/location"
          = "Taken at" / photo
	  = "Photos taken at" / location
 @"http://psi.ontopia.net/tmphoto/#taken-at"]

[depicted-in = "Object depicted in photo"
             = "Depicted in" / object
             = "Depicts" / photo
 @"http://psi.ontopia.net/tmphoto/#depicted-in"]
  [object = "Object" @"http://psi.ontopia.net/tmphoto/#object"]

[contained-in = "Containment"
              = "Located in" / containee
              = "Contains" / container
 @"http://psi.ontopia.net/tmphoto/#contained-in"]
  [containee = "Containee" @"http://psi.ontopia.net/tmphoto/#containee"]
  [container = "Container" @"http://psi.ontopia.net/tmphoto/#container"]

[categorized = "Categorized"
             = "In category" / classified
             = "Photos in" / classification
  @"http://psi.ontopia.net/tmphoto/#categorized"]
  [classified = "Classified" @"http://psi.ontopia.net/tmphoto/#classified"]
  [classfication = "Classification" @"http://psi.ontopia.net/tmphoto/#classification"]

[hide = "Hide" /* unary; role is photo */
 @"http://psi.ontopia.net/tmphoto/#hide"]

[is-processed = "Is processed" /* is-processed(event : processed) */
 @"http://psi.ontopia.net/tmphoto/#is-processed"]
[processed = "Processed"
 @"http://psi.ontopia.net/tmphoto/#processed"]

[taken-during = "Photo/event"
              = "Taken during" / photo
              = "Photos taken during" / event
 @"http://psi.ontopia.net/tmphoto/#taken-during"]

[Creator = "Creator" = "Creator of" / value
 @"http://purl.org/dc/elements/1.1/creator"]
  [value    = "Value"    @"http://psi.ontopia.net/metadata/#value"]
  [resource = "Resource" @"http://psi.ontopia.net/metadata/#resource"]

[fatherhood = "Fatherhood" = "Father" / child = "Father of" / parent
 @"http://psi.ontopia.net/tmphoto/#father-of"]
[motherhood = "Motherhood" = "Mother" / child = "Mother of" / parent
 @"http://psi.ontopia.net/tmphoto/#mother-of"]
  [child  = "Child"  @"http://psi.ontopia.net/tmphoto/#child"]
  [parent = "Parent" @"http://psi.ontopia.net/tmphoto/#parent"]

[partnership = "Partnership" = "Partner of" / partner
 @"http://psi.ontopia.net/tmphoto/#partner-of"]
  [partner = "Partner" @"http://psi.ontopia.net/tmphoto/#partner"]

/* ----- Occurrence types */

[lastmod = "Last modified"
  @"http://psi.ontopia.net/xtm/occurrence-type/last-modified-at"]
[description = "Description"
  @"http://psi.ontopia.net/xtm/occurrence-type/description"]
[start-date = "Start date" /* of an event */
  @"http://psi.ontopia.net/tmphoto/#start-date"]
[end-date = "End date" /* of an event */
  @"http://psi.ontopia.net/tmphoto/#end-date"]
[latitude = "Latitude" /* of a place */
  @"http://psi.ontopia.net/tmphoto/#latitude"]
[longitude = "Longitude" /* of a place */
  @"http://psi.ontopia.net/tmphoto/#longitude"]
[average-vote = "Average vote" /* of a photo */
  @"http://psi.ontopia.net/tmphoto/#average-vote"]
[duration = "Duration" /* of a video */
  @"http://psi.ontopia.net/tmphoto/#duration"]
